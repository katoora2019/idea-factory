<%= form_with(model: @idea, local: true) do |f| %>
    <div>
    <% if @idea.errors.present?%>
    <%= @idea.errors.full_messages.join(', ')%>
    <% end %>
    </div>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit %>
<% end %>