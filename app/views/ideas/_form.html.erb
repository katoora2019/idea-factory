<%= form_with(model: @idea, local: true) do |f| %>
<div class='form-group'>
    <div>
    <% if @idea.errors.present?%>
    <%= @idea.errors.full_messages.join(', ')%>
    <% end %>
    </div>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description  %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>